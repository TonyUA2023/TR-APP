{
  "expo": {
    "name": "TR-APP",
    "slug": "TR-APP",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.adminjstack.TRAPP",
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ],
      "bundler": "metro"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      ["expo-camera", {
        "cameraPermission": "Necesitamos acceso a la c√°mara para tomar fotos"
      }],
      ["expo-media-library", {
        "photosPermission": "Permiso para guardar fotos"
      }]
    ],
    "assetBundlePatterns": [
      "**/*.png",
      "**/*.jpg",
      "**/*.jpeg",
      "**/*.gif",
      "**/*.pdf",
      "src/assets/templates/*.pdf"
    ],
    "extra": {
      "eas": {
        "projectId": "48a7ef33-4c1e-4069-ae93-9c7bd2fed14d"
      }
    },
    "owner": "adminjstack"
  }
}
